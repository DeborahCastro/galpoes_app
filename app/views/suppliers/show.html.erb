<h1>Fornecedor <%= @supplier.brand_name %></h1>
<h2><%= @supplier.corporate_name %></h2>

<dl>
  <dt>Documento:</dt>
  <dd><%= @supplier.registration_number %></dd>
  <dt>Endereço:</dt>
  <dd><%= @supplier.full_address %> - <%= @supplier.city %> - <%= @supplier.state %></dd>
  <dt>Email:</dt>
  <dd><%= @supplier.email %></dd>
</dl>

<%= link_to 'Editar', edit_supplier_path(@supplier) %>

<div>
  <%= link_to('Voltar', root_path) %>
</div>

<h1>Modelos de Produto: </h3>

<% @supplier.product_model.each do |pm| %>
  <h2><%= pm.name %></h2>
  <dl>
    <dt>Peso:</dt>
    <dd><%= pm.weight %> g</dd>
    <dt>Dimensões:</dt>
    <dd><%= pm.width %> cm x <%= pm.height %> cm x <%= pm.depth %> cm</dd>
    <dt>SKU:</dt>
    <dd><%= pm.sku %></dd>
  </dl>
<% end %>